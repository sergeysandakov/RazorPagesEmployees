@model Employee

@{ 
    var photoPath = $"/images/{Model.PhotoPath ?? "standart.png"}";
    var showButtons = (bool)ViewData["ShowButtons"];
}
      
    <div class="card-deck">
        <div class="card m-3">

            <div class="card-header text-center">
                <h3>@Model.Name</h3>
            </div>

            <div class="text-center">
                <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
            </div>

            @if (showButtons) 
            { 
                <div class="card-footer text-center">
                    <a asp-page="/Employees/Details" asp-route-ID="@Model.Id" class="btn btn-success m-1">View</a>
                    <a asp-page="/Employees/Edit" asp-route-ID="@Model.Id" class="btn btn-secondary m-1">Edit</a>
                    <a asp-page="/Employees/Delete" asp-route-ID="@Model.Id" class="btn btn-danger m-1">Delete</a>
                </div>
            }
            
        </div>
    </div>
